<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp">
    <Properties>
        <Property name="bootstrapServers">localhost:9092</Property>
    </Properties>

    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %c:%L – %msg%n%throwable"/>
        </Console>

        <RollingFile name="FILE"
                     fileName="logs/app.log"
                     filePattern="logs/$${date:yyyy-MM}/app-%d{dd-MM-yyyy}-%i.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %c:%L – %msg%n%throwable</Pattern>
            </PatternLayout>
            <SizeBasedTriggeringPolicy size="10 mb"/>
        </RollingFile>

        <Kafka name="KAFKA" topic="budget-logs">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %c:%L – %msg%n%throwable"/>
            <Property name="bootstrap.servers">${bootstrapServers}</Property>
        </Kafka>
        <Async name="Async">
            <AppenderRef ref="KAFKA"/>
        </Async>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="CONSOLE"/>
        </Root>
        <Logger name="com.example.kafkaappenderlogs" level="WARN" additivity="false">
            <AppenderRef ref="KAFKA"/>
            <AppenderRef ref="FILE"/>
        </Logger>
        <Logger name="org.apache.kafka" level="WARN"/>
    </Loggers>
</Configuration>